---
import BaseLayout from "../layouts/BaseLayout.astro";

// definici√≥n de variables
const pageTitle = "Sobre mi";


const identify = {
    firstName: "Maximo",
    country: "Canada",
    occupation: "Technical Writer",
    hobbies: ["Gym", "Coddeing", "Play Games"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

const happy = true;
const finished = true;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
	<style define:vars={{skillColor, fontWeight, textCase}}>
		.skill {
			/* color: green; */
			color: var(--skillColor);
			font-weight: var(--skillColor);
			text-transform: var(--textCase);
		}
	</style>

	<h2>Here ar a few facts about me:</h2>
	<ul>
		<li>My name is {identify.firstName}.</li>
		<li>I live in {identify.country} and I work as a {identify.occupation}.</li>
		{identify.hobbies.length >= 2 &&
			<li>Two of my hobbies are: {identify.hobbies[0]} and {identify.hobbies[1]}</li>
		}
	</ul>
	<h2>My Skills are:</h2>
	<ul>
		{skills.map((skill) => <li class="skill">{skill}</li>)}
	</ul>

	<h2>Mi nuevo sitio</h2>
